{
  "openapi": "3.0.0",
  "info": {
    "title": "MCP Writing Templates Service",
    "description": "A service to access and use technical writing templates.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8001"
    }
  ],
  "paths": {
    "/templates": {
      "get": {
        "summary": "List all available template categories",
        "description": "Returns a list of all available writing template categories.",
        "operationId": "list_templates",
        "responses": {
          "200": {
            "description": "A list of available template categories.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/templates/{category}": {
      "get": {
        "summary": "Get all templates for a category",
        "description": "Retrieves all templates for a given category, including the general writing-tips file.",
        "operationId": "get_category_templates",
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "required": true,
            "description": "The category of the templates to retrieve.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of templates with their content.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "template_name": {
                        "type": "string"
                      },
                      "content": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Category not found."
          }
        }
      }
    }
  }
}